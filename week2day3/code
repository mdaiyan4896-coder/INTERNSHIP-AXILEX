#Reverse a string
text = input("Enter a string: ")
rev = text[::-1]
print("Reversed string:", rev)




#CHECKING PALINDROME
text = input("Enter a string: ")
rev = text[::-1]
if text == rev:
    print("Palindrome string")
else:
    print("Not a palindrome string")



  

#Vowels and consonents
text = input("Enter a string: ")
vowels = 0
consonants = 0
for ch in text.lower():
    if ch.isalpha():
        if ch in "aeiou":
            vowels += 1
        else:
            consonants += 1
print("Vowels:", vowels)
print("Consonants:", consonants)




#Character frequency
text = input("Enter a string: ")
freq = {}
for ch in text:
    if ch in freq:
        freq[ch] += 1
    else:
        freq[ch] = 1
print("Character Frequency:")
print(freq)




#String slicing
text = input("Enter a string: ")
print("First 5 characters:", text[:5])
print("Last 5 characters:", text[-5:])
print("String from index 2 to 6:", text[2:7])

